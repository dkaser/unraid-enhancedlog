}

if ($enhanced_log_cfg['NETWORK'] == "yes") {
	$network_color = $enhanced_log_cfg['NETWORK_CLR'];
	$network_tag = "<font size='3'style='background-color:$network_color'>&nbsp;Network&nbsp;</font>";
} else {
