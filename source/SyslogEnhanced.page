$zip = str_replace(' ','_',strtolower($var['NAME']))."-syslog-".date('Ymd-Hi').".zip";

/* Array of strings and highlight colors - "search string", "background color", "font color". */
$search = array_map('str_getcsv', file('/usr/local/emhttp/plugins/enhanced.log/syslog.conf'));

echo "<pre class='up'>";
echo "<font size='3'><font style='background-color:red' color='white'> Errors </font>";
echo "&nbsp;<font style='background-color:orange' color='black'> Minor Issues </font>";
echo "&nbsp;<font style='background-color:lime' color='black'> Lime Tech </font>";
echo "&nbsp;<font style='background-color:green' color='white'> Array </font>";
echo "&nbsp;<font style='background-color:blue' color='white'> System </font>";
echo "&nbsp;<font style='background-color:gray' color='white'> File System </font>";
echo "&nbsp;<font style='background-color:teal' color='white'> Devices </font>";
echo "&nbsp;<font style='background-color:purple' color='white'> Network </font>";
echo "&nbsp;<font style='background-color:olive' color='white'> Login </font>";
echo "&nbsp;<font style='background-color:navy' color='white'> emhttp </font>";
echo "&nbsp;</font></br></br>";

echo "<div style='height:650px;width:1242px;border:2px solid #ccc;overflow:auto;'>";
foreach (file('/var/log/syslog') as $line) {
	$found_it = false;
	$i = 0;
	foreach ($search as $s) {
		if (preg_match("/$s[0]/i", $line)) {
			$found_it = true;
			break;
		}
		$i++;
	}

	if ($found_it) {
		echo "<font style='background-color:".$search[$i][1]."'; color=".$search[$i][2].">$line</font>";
	} else {
		echo $line;
	}
}
echo "</div>";
echo "</pre>";

?>
<script>
function cleanUp() {
  if (document.hasFocus()) {
    $('input[value="Downloading..."]').val('Download').prop('disabled',false);
    $.post('/webGui/include/Download.php',{cmd:'delete',file:'<?=$zip?>'});
  } else {
    setTimeout(cleanUp,4000);
  }
}  
function getlog() {
  $('input[value="Download"]').val('Downloading...').prop('disabled',true);
  $.post('/webGui/include/Download.php',{cmd:'save',source:'/var/log/syslog',file:'<?=$zip?>'},function(zip) {
    location = zip;
    setTimeout(cleanUp,4000);
  });
}
$('.tabs').append("<span class='status vhshift'><input type='button' value='Download' onclick='getlog()'></span>");
</script>
<input type="button" value="Download" onclick="getlog()"><input type="button" value="Done" onclick="done()">
