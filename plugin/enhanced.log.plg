<FILE Name="/boot/config/plugins/enhanced.log/unraid-enhancedlog-2025.08.15-noarch-1.txz">
<URL>https://github.com/dkaser/unraid-enhancedlog/releases/download/2025.08.15/unraid-enhancedlog-2025.08.15-noarch-1.txz</URL>
<SHA256>69b88736dbfedb42f09fc548aa6d6c5b359bc62749f6254b1afa2852216532cb</SHA256>
</FILE>

<!--
The 'install' script.
-->
<FILE Run="/bin/bash">
<INLINE>
<![CDATA[
upgradepkg --install-new /boot/config/plugins/enhanced.log/unraid-enhancedlog-2025.08.15-noarch-1.txz

# cleanup old versions
rm -f $(ls /boot/config/plugins/enhanced.log/unraid-enhancedlog-*.txz 2>/dev/null | grep -v '2025.08.15')

echo "VERSION=2025.08.15" > /usr/local/emhttp/plugins/enhanced.log/version.ini

echo ""
echo "----------------------------------------------------"
echo " enhanced.log has been installed."
echo " Version: 2025.08.15"
echo "----------------------------------------------------"
echo ""
]]>
</INLINE>
</FILE>

<!--
The 'remove' script.
-->
<FILE Run="/bin/bash" Method="remove">
<INLINE>
<![CDATA[
removepkg unraid-enhancedlog

rm -rf /usr/local/emhttp/plugins/enhanced.log
rm -rf /boot/config/plugins/enhanced.log

# Remove rsyslog filtering.
rm -rf /etc/rsyslog.d/02-blocklist-extra.conf

# Restart rsyslog
echo "Restarting rsyslog..."
/etc/rc.d/rc.rsyslogd restart >/dev/null
]]>
</INLINE>
</FILE>

</PLUGIN>
